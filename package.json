{
	"name": "@netatwork/aurelia-i18n-tools",
	"version": "4.1.1",
	"description": "A toolchain to help with localization in aurelia projects.",
	"repository": {
		"type": "git",
		"url": "https://github.com/Netatwork-de/aurelia-i18n-tools"
	},
	"type": "module",
	"main": "./dist/index.js",
	"bin": {
		"naw-aurelia-i18n": "./dist/cli.js"
	},
	"scripts": {
		"build": "tsc -p tsconfig-build.json",
		"build:watch": "tsc -p tsconfig-build.json -w",
		"test": "tsc -p tsconfig-test.json && ava",
		"start": "tsc -p tsconfig-test.json && mx-parallel \"tsc -p tsconfig-test.json -w\" \"ava -w\"",
		"prepack": "npm test && npm run build"
	},
	"dependencies": {
		"ansi-colors": "^4.1.3",
		"chokidar": "^3.6.0",
		"decamelize": "^6.0.0",
		"parse5": "^7.2.1",
		"picomatch": "^4.0.2",
		"yargs-parser": "^21.1.1"
	},
	"devDependencies": {
		"@mxjp/parallel": "^1.0.2",
		"@types/node": "^22.10.2",
		"@types/picomatch": "^2.3.3",
		"@types/yargs-parser": "^21.0.3",
		"ava": "^6.1.2",
		"typescript": "^5.7.2"
	},
	"author": "Net at Work GmbH",
	"license": "Apache-2.0"
}
